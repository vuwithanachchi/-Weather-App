<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="102dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardElevation="7dp"
    app:cardCornerRadius="11dp"
    android:background="@android:color/transparent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_backgrnd"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTime"
            android:gravity="center"
            android:padding="5dp"
            android:text="Time"
            android:textColor="@color/white"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/idTemp"
            android:gravity="center"
            android:padding="5dp"
            android:text="25"
            android:layout_below="@id/idTime"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            />

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:id="@+id/idCondition"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@id/idTemp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_below="@id/idCondition"
           android:textColor="@color/white"
            android:id="@+id/idWindSpeed"
            android:text="15"
            android:padding="4dp"
            android:layout_margin="5dp"
            android:textSize="16dp"
            />




    </RelativeLayout>

</androidx.cardview.widget.CardView>